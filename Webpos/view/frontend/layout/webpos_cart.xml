<?xml version="1.0"?>
<page layout='webpos' xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" >
    <body>
        <referenceBlock name="webpos.page">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="webpos.container" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="checkout" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="webpos.cart" xsi:type="array">
                                            <item name="component" xsi:type="string">Magestore_Webpos/js/view/checkout/cart</item>
                                            <item name="displayArea" xsi:type="string">webpos.cart</item>
                                            <item name="children" xsi:type="array">
                                                <item name="webpos.cart.items" xsi:type="array">
                                                    <item name="component" xsi:type="string">Magestore_Webpos/js/view/checkout/cart/items</item>
                                                    <item name="displayArea" xsi:type="string">webpos.cart.items</item>
                                                </item>
                                                <item name="webpos.cart.totals" xsi:type="array">
                                                    <item name="component" xsi:type="string">Magestore_Webpos/js/view/checkout/cart/totals</item>
                                                    <item name="displayArea" xsi:type="string">webpos.cart.totals</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
